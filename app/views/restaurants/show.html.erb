<div id="restaurant" class="container-fluid">
  <div class="row">

    <div class="col-xs-12">

      <h2 class="restaurant-name"><span class="glyphicon glyphicon-star-empty"></span>&nbsp;&nbsp;<%= @restaurant['name'] %></h2>
      <div>
        <div id="map-canvas" class="small-map"></div>
      </div>


      <div class="row">
        <div class="col-xs-6 listing">
          <!-- <span class="badge">Italian</span><span class="badge">pizza</span><br> -->
          <p><%= @restaurant['address'] %><br>
            <%= @restaurant['locality'] %>, <%= @restaurant['region'] %> <%= @restaurant['postcode'] %><br>
            <%= @restaurant['phone_number'] %></p>
        </div>
        <div class="col-xs-6">
          <%= button_to('Write Review', '#', class: "btn btn-lg btn-default btn-block review") %>
          <%= link_to 'Visit Website', @restaurant['website'], class: "website" %>
          <%= link_to 'Add to My Favorites', '#', class: "website" %>
        </div>
      </div>

        <div id="comments">
          <p class="comment-count">1 comment</p>
          <ul>
            <li class="comment-list">
              <h4 class="comment-name">Laura W.</h4>
              <p class="comment-text">4 days ago</p>
              <p class="comment-text">We love this place! Come on Tuesdays for free kids meals!</p>
            </li>
            <li class="comment-list">
              <h4 class="comment-name">Mary A.</h4>
              <p class="comment-text">1 week ago</p>
              <p class="comment-text">My daughter loves the kids menu, and my hubby and I come here for date night. Great service.</p>
            </li>
          </ul>
        </div>
      </div>

  </div>
</div>

<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%= @restaurant[''] %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
  handler.getMap().setZoom(18);
}); </script>
